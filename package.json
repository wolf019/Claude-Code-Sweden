{
  "name": "live-wordcloud",
  "version": "1.0.0",
  "description": "Real-time wordcloud application for live demos",
  "main": "src/app.js",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "lint": "eslint src/ tests/",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\"",
    "build": "npm run lint && node --check src/app.js"
  },
  "dependencies": {
    "@google-cloud/firestore": "^7.11.6",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "socket.io-client": "^4.6.0",
    "supertest": "^6.3.4"
  },
  "keywords": [
    "wordcloud",
    "realtime",
    "socket.io",
    "google-cloud"
  ],
  "author": "",
  "license": "ISC"
}
